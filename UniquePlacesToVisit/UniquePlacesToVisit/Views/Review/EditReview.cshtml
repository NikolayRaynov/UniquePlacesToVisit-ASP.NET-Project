@using UniquePlacesToVisit.Web.ViewModels.Review
@model ReviewViewModel

<h2>Редактиране на ревю</h2>

<form asp-action="EditReview" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label for="ReviewText">Текст на ревюто</label>
        <textarea id="ReviewText" name="ReviewText" class="form-control" required>@Model.ReviewText</textarea>
    </div>
    <div class="form-group">
        <label for="Rating">Рейтинг</label>
        <input type="number" id="Rating" name="Rating" class="form-control" min="1" max="5" value="@Model.Rating" required />
    </div>
    <button type="submit" class="btn btn-primary">Запази промените</button>
    <a asp-action="Details" asp-route-id="@Model.AttractionId" class="btn btn-secondary">Отказ</a>
</form>
