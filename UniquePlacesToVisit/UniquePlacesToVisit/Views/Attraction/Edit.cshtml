@using UniquePlacesToVisit.Web.ViewModels.Attraction
@model EditAttractionViewModel

@{
    ViewData["Title"] = "Редактирай атракция";
}

<h1>Редактирай атракция</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImagePath"></label>
        <input type="file" asp-for="ImagePath" class="form-control" />
        <span asp-validation-for="ImagePath" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CityId"></label>
        <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"></select>
        <span asp-validation-for="CityId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Запази</button>
    <a asp-action="Index" class="btn btn-secondary">Отказ</a>
</form>
