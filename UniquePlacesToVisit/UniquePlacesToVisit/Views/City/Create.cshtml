@using UniquePlacesToVisit.Web.ViewModels.City
@model CreateCityViewModel

@{
    ViewData["Title"] = "Добави нов град";
}

<h2>Добави нов град</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Запиши</button>
        <a asp-action="Index" class="btn btn-secondary">Отказ</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
